# ============================================================
# ✅ 완성본(생략 버전)
#
# Stage A: Shelf1 <-> Shelf2 3회 왕복 (movej, HOME 반복 방문 X)
# Stage B: Shelf2 -> Shelf3 3회 운반
#   - Shelf2 픽: movej(q_s2[i])
#   - Shelf3 플레이스: movej(q_mid)로 같은 관절 형상 도착
#       -> (바로) tilt 자세로 변경 -> open -> 원래 자세 복귀
#   - ※ Stage B에서 "위로 접근(p_app) / 내려오기(p_work)" 생략
# ============================================================

INSPECT_TIME = 2.0

V_FAST = 70
A_FAST = 70
V_SLOW = 20
A_SLOW = 20

VJ = 70
AJ = 70

HOME_P = posx(367.22, 3.83, 201.28, 158.41, 179.96, 158.79)

# ✅ 사용자 제공 중간(=Shelf3 안정) 관절 자세
q_mid = [26.01, 17.70, 87.27, 0.13, 75.06, 26.03]

# Stage A Shelf1 micro motion
S1_PICK_PUSH_X = 20.0
S1_PICK_PULL_X = -10.0
S1_BEFORE_CLOSE_WAIT = 0.5

# Stage B Shelf3 tilt (q_mid에서 읽은 현재 자세 기준 B에 덧붙임)
S3_PITCH_DELTA_DEG = 20.0   # 먼저 10~20 추천
S3_PITCH_SIGN = -1.0        # 방향 반대면 +1/-1


def do_homing():
    pass


# -------------------------
# Gripper
# -------------------------
def open_gripper():
    set_digital_output(2, ON)
    wait(1.00)
    set_digital_output(2, OFF)

def close_gripper():
    set_digital_output(1, ON)
    wait(1.00)
    set_digital_output(1, OFF)


# -------------------------
# MOVEJ targets (티칭값)
# -------------------------
q_s1 = [
    [30.62, 18.12, 122.74, -146.41, 57.81, 161.67],
    [40.95, 24.14, 113.02, -133.93, 59.29, 152.80],
    [49.59, 30.45, 102.15, -123.56, 61.19, 144.29],
]
q_s2 = [
    [-31.45, 19.05, 69.88, 0.07, 91.00, -30.92],
    [-28.24, 27.55, 54.35, 0.11, 98.04, -27.66],
    [-25.60, 37.51, 39.08, 0.17, 103.36, -24.97],
]

def goj(q):
    movej(q, v=VJ, a=AJ)

def go_home():
    movel(HOME_P, v=V_FAST, a=A_FAST)


# -------------------------
# Robust current posx extractor + helpers
# -------------------------
def _extract_posx6(p):
    try:
        if len(p) >= 6:
            return p[0], p[1], p[2], p[3], p[4], p[5]
    except:
        pass

    try:
        if len(p) >= 1:
            p0 = p[0]
            if len(p0) >= 6:
                return p0[0], p0[1], p0[2], p0[3], p0[4], p0[5]
    except:
        pass

    tp_popup("get_current_posx() format unexpected:\n" + str(p))
    raise Exception("Cannot extract 6D pose from get_current_posx()")


def _wrap_deg(a):
    while a > 180.0:
        a = a - 360.0
    while a < -180.0:
        a = a + 360.0
    return a


def _pose_from_current():
    p = get_current_posx()
    x, y, z, A, B, C = _extract_posx6(p)
    return (x, y, z, A, B, C)

def _pose_same(p6):
    x, y, z, A, B, C = p6
    return posx(x, y, z, A, B, C)

def _pose_tilt_from_pose(p6, pitch_delta):
    x, y, z, A, B, C = p6
    B2 = _wrap_deg(B + pitch_delta)
    return posx(x, y, z, A, B2, C)


# -------------------------
# Stage A용: 상대 X 이동 (Shelf1 픽 미세동작)
# -------------------------
def move_rel_x(dx, v=V_SLOW, a=A_SLOW):
    p = get_current_posx()
    x, y, z, A, B, C = _extract_posx6(p)
    movel(posx(x + dx, y, z, A, B, C), v=v, a=a)


# ============================================================
# Stage A: Shelf1<->Shelf2 3회 왕복 (HOME 반복 방문 X)
# ============================================================
def stageA_s1_s2_roundtrip_3cycles_no_home():
    go_home()
    wait(0.3)

    for i in range(3):
        open_gripper()
        wait(0.1)

        goj(q_s1[i])
        wait(0.2)

        move_rel_x(S1_PICK_PUSH_X, v=V_SLOW, a=A_SLOW)
        wait(S1_BEFORE_CLOSE_WAIT)
        close_gripper()
        wait(0.2)
        move_rel_x(S1_PICK_PULL_X, v=V_SLOW, a=A_SLOW)
        wait(0.1)

        goj(q_s2[i])
        wait(0.2)

        wait(INSPECT_TIME)

        open_gripper()
        wait(0.2)


# ============================================================
# Stage B(생략 버전):
#   Shelf2(i) 픽 -> q_mid 이동 -> (바로) tilt -> open -> 원복 -> 다음
# ============================================================
def stageB_s2_s3_pick_qs2_via_qmid_tilt_only_3cycles():
    for i in range(3):
        # 1) Shelf2(i)로 이동 후 집기
        goj(q_s2[i])
        wait(0.2)

        close_gripper()
        wait(0.2)

        # 2) Shelf3 안정점(관절)으로 이동 (같은 팔 모양)
        goj(q_mid)
        wait(0.2)

        # 3) 현재점에서 자세만 tilt -> 놓기 -> 원복
        cur6 = _pose_from_current()
        p_work = _pose_same(cur6)
        p_tilt = _pose_tilt_from_pose(cur6, S3_PITCH_SIGN * S3_PITCH_DELTA_DEG)

        movel(p_tilt, v=V_SLOW, a=A_SLOW)
        wait(0.1)

        open_gripper()
        wait(0.2)

        movel(p_work, v=V_SLOW, a=A_SLOW)
        wait(0.1)

        # 4) 다음 cycle 안정 시작
        goj(q_mid)
        wait(0.1)


def main():
    stageA_s1_s2_roundtrip_3cycles_no_home()
    stageB_s2_s3_pick_qs2_via_qmid_tilt_only_3cycles()

    do_homing()
    go_home()

main()
