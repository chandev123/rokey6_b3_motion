# ============================
# Stage A: Shelf1<->Shelf2 : movej 연속 3번 왕복 (HOME 반복 방문 X)
#   - Shelf1 도착 후: X +20 -> wait 0.5 -> CLOSE -> X -10 -> Shelf2 이동
#   - Shelf2에서 검사 후 OPEN(놓기)
#
# Stage B: Shelf2->Shelf3 : movel
#   - Shelf2: 3점(i=0,1,2)에서 집기 (x + 60*i)
#   - Shelf3: 1점 고정
#     * 접근(APP)과 1차 작업점(WORK)은 "기존 S3_BASE 자세"로 (IK 안정)
#     * 내려놓기 직전/직후에만 같은 XYZ에서 "기울인 자세"로 바꿔서 OPEN (해결책 1)
# ============================

Z_UP = 80.0
INSPECT_TIME = 2.0

V_FAST = 70
A_FAST = 70
V_SLOW = 20
A_SLOW = 20

VJ = 70
AJ = 70

HOME_P = posx(367.22, 3.83, 201.28, 158.41, 179.96, 158.79)

S2_BASE = (429.80, -258.59, 185.82, 115.72, -179.93, 116.62)  # Shelf2 slot0 (posx)
S3_BASE = (429.06,  213.83,  87.06, 152.93,  179.97, 155.34)  # Shelf3 fixed point (posx)

# Stage B: Shelf2 step
S2_STEP_X = 60.0

# Shelf1 micro motion (Stage A)
S1_PICK_PUSH_X = 20.0
S1_PICK_PULL_X = -20.0
S1_BEFORE_CLOSE_WAIT = 0.5

# Shelf3 tilt target (forward-lean in a constrained way)
# - "XY평면과 30~40도"를 목표로 하면 B 크기가 커질 수 있어 workspace가 다시 빡셀 수 있음.
# - 해결책1에서는 "접근은 기본 자세", "작업점에서만 잠깐 기울임"이라 훨씬 안정적.
S3_TILT_TO_XY_DEG = 35.0   # 30~40에서 조절
S3_TILT_SIGN = -1.0        # 방향이 반대면 +1/-1 바꾸기


def do_homing():
    pass


# -------------------------
# Gripper
# -------------------------
def open_gripper():
    set_digital_output(2, ON)
    wait(1.00)
    set_digital_output(2, OFF)

def close_gripper():
    set_digital_output(1, ON)
    wait(1.00)
    set_digital_output(1, OFF)


# -------------------------
# MOVEJ targets (티칭값)
# -------------------------
q_s1 = [
    [30.62, 18.12, 122.74, -146.41, 57.81, 161.67],
    [40.95, 24.14, 113.02, -133.93, 59.29, 152.80],
    [49.59, 30.45, 102.15, -123.56, 61.19, 144.29],
]
q_s2 = [
    [-31.45, 19.05, 69.88, 0.07, 91.00, -30.92],
    [-28.24, 27.55, 54.35, 0.11, 98.04, -27.66],
    [-25.60, 37.51, 39.08, 0.17, 103.36, -24.97],
]

def goj(q):
    movej(q, v=VJ, a=AJ)

def go_home():
    movel(HOME_P, v=V_FAST, a=A_FAST)


# -------------------------
# Robust current posx extractor + rel move
# -------------------------
def _extract_posx6(p):
    try:
        if (len(p) >= 6):
            return p[0], p[1], p[2], p[3], p[4], p[5]
    except:
        pass

    try:
        if (len(p) >= 1):
            p0 = p[0]
            if (len(p0) >= 6):
                return p0[0], p0[1], p0[2], p0[3], p0[4], p0[5]
    except:
        pass

    tp_popup("get_current_posx() format unexpected:\n" + str(p))
    raise Exception("Cannot extract 6D pose from get_current_posx()")


def move_rel_x(dx, v=V_SLOW, a=A_SLOW):
    p = get_current_posx()
    x, y, z, A, B, C = _extract_posx6(p)
    movel(posx(x + dx, y, z, A, B, C), v=v, a=a)


# -------------------------
# Stage B: Shelf2 (3 points) pose helpers
# -------------------------
def s2_work_pose(i):
    x0, y0, z0, A0, B0, C0 = S2_BASE
    return posx(x0 + i * S2_STEP_X, y0, z0, A0, B0, C0)

def s2_app_pose(i):
    x0, y0, z0, A0, B0, C0 = S2_BASE
    return posx(x0 + i * S2_STEP_X, y0, z0 + Z_UP, A0, B0, C0)


# -------------------------
# Shelf3: base pose helpers (IK 안정용: 기존 자세 그대로 사용)
# -------------------------
def s3_app_pose_base():
    x0, y0, z0, A0, B0, C0 = S3_BASE
    return posx(x0, y0, z0 + Z_UP, A0, B0, C0)

def s3_work_pose_base():
    x0, y0, z0, A0, B0, C0 = S3_BASE
    return posx(x0, y0, z0, A0, B0, C0)


# -------------------------
# Shelf3: constrained tilt pose (같은 XYZ에서 자세만 바꾸는 용도)
# 해결책1: 접근/이탈은 base 자세로 하고, 작업점에서만 tilt 자세로 잠깐 바꿈
# -------------------------
def _s3_target_abc_constrained():
    theta = S3_TILT_TO_XY_DEG      # 30~40
    B_mag = 90.0 - theta           # 예: 35 -> 55
    A = 0.0
    B = S3_TILT_SIGN * B_mag
    C = 0.0
    return A, B, C

def s3_work_pose_tilt():
    x0, y0, z0, _, _, _ = S3_BASE
    A, B, C = _s3_target_abc_constrained()
    return posx(x0, y0, z0, A, B, C)


# -------------------------
# Stage B actions
# -------------------------
def movel_pick_s2(i):
    movel(s2_app_pose(i),  v=V_FAST, a=A_FAST)
    movel(s2_work_pose(i), v=V_SLOW, a=A_SLOW)
    wait(0.2)

    close_gripper()
    wait(0.2)

    movel(s2_app_pose(i),  v=V_FAST, a=A_FAST)
    wait(0.1)


def movel_place_s3_fixed_constrained():
    # 1) 접근/내려감은 "기존 자세"로 (workspace 안정)
    movel(s3_app_pose_base(),  v=V_FAST, a=A_FAST)
    movel(s3_work_pose_base(), v=V_SLOW, a=A_SLOW)
    wait(0.1)

    # 2) 같은 XYZ에서 "기울인 자세"로 잠깐 변경 (놓기 직전)
    movel(s3_work_pose_tilt(), v=V_SLOW, a=A_SLOW)
    wait(0.1)

    # 3) 놓기
    open_gripper()
    wait(0.2)

    # 4) 다시 "기존 자세"로 복귀 후 이탈
    movel(s3_work_pose_base(), v=V_SLOW, a=A_SLOW)
    movel(s3_app_pose_base(),  v=V_FAST, a=A_FAST)
    wait(0.1)


# ============================================================
# Stage A: Shelf1<->Shelf2 (HOME 반복 방문 없이) 3번 연속 왕복
# ============================================================
def stageA_s1_s2_roundtrip_3cycles_no_home():
    go_home()
    wait(0.3)

    for i in range(3):
        open_gripper()
        wait(0.1)

        goj(q_s1[i])
        wait(0.2)

        move_rel_x(S1_PICK_PUSH_X, v=V_SLOW, a=A_SLOW)
        wait(S1_BEFORE_CLOSE_WAIT)
        close_gripper()
        wait(0.2)
        move_rel_x(S1_PICK_PULL_X, v=V_SLOW, a=A_SLOW)
        wait(0.1)

        goj(q_s2[i])
        wait(0.2)

        wait(INSPECT_TIME)

        open_gripper()
        wait(0.2)


# ============================================================
# Stage B: Shelf2(i=0,1,2)에서 집고 -> Shelf3 고정 1점(기울기 잠깐)으로 놓기
# ============================================================
def stageB_s2_s3_s2_3points_s3_fixed_constrained_3cycles():
    for i in range(3):
        movel_pick_s2(i)
        movel_place_s3_fixed_constrained()


def main():
    stageA_s1_s2_roundtrip_3cycles_no_home()
    stageB_s2_s3_s2_3points_s3_fixed_constrained_3cycles()

    do_homing()
    go_home()

main()
